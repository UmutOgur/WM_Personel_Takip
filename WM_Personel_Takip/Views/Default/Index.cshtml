@using WM_Personel_Takip.Models
@model List<Birim>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


<br />
<table class="table table-bordered">
    <tr>
        <th style="background-color:aqua">BirimID</th>
        <th style="background-color:aqua">BirimADI</th>
        <th style="background-color:aqua">SİL</th>
        <th style="background-color:aqua">GÜNCELLE</th>
        <th style="background-color:aqua">DETAYLAR</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.BirimID</td>
            <td>@item.BirimAD</td>
            <td><a href="/Default/BirimSil/@item.BirimID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Default/BirimGetir/@item.BirimID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Default/BirimDetay/@item.BirimID" class="btn btn-info">Detay</a></td>

        </tr>
    }

</table>

<a href="/Default/YeniBirim" class="btn btn-primary">Yeni Birim</a>
